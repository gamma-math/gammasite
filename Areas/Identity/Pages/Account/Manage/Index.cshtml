@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username">Brugernavn</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Navn"></label>
                <input asp-for="Input.Navn" class="form-control" />
                <span asp-validation-for="Input.Navn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Adresse"></label>
                <input asp-for="Input.Adresse" class="form-control" />
                <span asp-validation-for="Input.Adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Aargang"></label>
                <input asp-for="Input.Aargang" class="form-control" />
                <span asp-validation-for="Input.Aargang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Beskaeftigelse"></label>
                <input asp-for="Input.Beskaeftigelse" class="form-control" />
                <span asp-validation-for="Input.Beskaeftigelse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status">Brugerstatus</label>
                <input asp-for="Status" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Visibility"></label>
                <input asp-for="Input.Visibility" class="custom-checkbox" type="checkbox"/>
                <span asp-validation-for="Input.Visibility" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Gem</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}