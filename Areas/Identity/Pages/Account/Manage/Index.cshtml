@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6 d-grid gap-1">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating p-1">
                <input asp-for="Username" class="form-control" disabled placeholder=" " />
                <label asp-for="Username" class="form-label">Brugernavn</label>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Input.Navn" class="form-control" placeholder=" " />
                <label asp-for="Input.Navn" class="form-label"></label>
                <span asp-validation-for="Input.Navn" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Input.Adresse" class="form-control" placeholder=" " />
                <label asp-for="Input.Adresse" class="form-label"></label>
                <span asp-validation-for="Input.Adresse" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Input.Aargang" class="form-control" placeholder=" " />
                <label asp-for="Input.Aargang" class="form-label"></label>
                <span asp-validation-for="Input.Aargang" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder=" " />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Input.Beskaeftigelse" class="form-control" placeholder=" " />
                <label asp-for="Input.Beskaeftigelse" class="form-label"></label>
                <span asp-validation-for="Input.Beskaeftigelse" class="text-danger"></span>
            </div>
            <div class="form-floating p-1">
                <input asp-for="Status" class="form-control" disabled placeholder=" " />
                <label asp-for="Status" class="form-label">Brugerstatus</label>
            </div>
            <div class="form-check">
                <input asp-for="Input.Visibility" class="form-check-input" type="checkbox"/>
                <label asp-for="Input.Visibility" class="form-check-label"></label>
                <span asp-validation-for="Input.Visibility" class="text-danger"></span>
            </div>
            <br />
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Gem</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}