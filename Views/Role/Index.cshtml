@model IEnumerable<IdentityRole>

<h1>Rolleoversigt</h1>
<a asp-action="Create" class="btn btn-secondary">Opret rolle</a>
<br />
<br />
<table class="table table-sm table-bordered table-bordered">
    <thead class="thead-dark">
        <tr><th>ID</th><th>Navn</th><th>Opdatér</th><th>Slet</th></tr>
    </thead>
    @foreach (var role in Model)
    {
    <tr>
        <td>@role.Id</td>
        <td>@role.Name</td>
        <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Opdatér</a></td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Slet
                </button>
                <div class="dropdown-menu">
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="dropdown-item">
                            Bekræft
                        </button>
                    </form>
                </div>
            </div>
        </td>
    </tr>
    }
</table>

