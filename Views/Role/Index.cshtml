@model IEnumerable<IdentityRole>

<h1 class="bg-info text-white">Rolleoversigt</h1>
<a asp-action="Create" class="btn btn-secondary">Opret rolle</a>

<br />
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Navn</th><th>Brugere</th><th>Opdatér</th><th>Slet</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Opdatér</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Slet
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

