@using GamMaSite.Areas.Identity.Data
@model IEnumerable<GamMaUser>

@{
    ViewData["Title"] = "Medlemmer";
}

<h1 class="">Medlemsoversigt</h1>
<br />
<table class="table table-sm table-bordered" id="medlemmer">
    <tr>
        <th>Navn</th>
        <th>Årgang</th>
        <th>Beskæftigelse</th>
    </tr>
    @foreach (GamMaUser user in Model.OrderBy(it => it.Navn))
    {
        if (new[] { UserStatus.BETALT, UserStatus.SKYLDER }.Contains(user.Status))
        {
            <tr>
                <td>@user.Navn</td>
                <td>@user.Aargang</td>
                <td>@user.Beskaeftigelse</td>
            </tr>
        }
    }
</table>