@using GamMaSite.ViewModels;
@model ProductInfo;

@{
    ViewData["Title"] = "Produktside";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script type="text/javascript">
        // Create an instance of the Stripe object with your publishable API key
        var stripe = Stripe("pk_test_XbTXDRaWHSTKiNxGsvv8CKP100NnEtOaQd");
        var checkoutButton = document.getElementById("checkout-button");
        checkoutButton.addEventListener("click", function () {
            var productId = document.getElementById("product").value;
            var priceId = document.getElementById("price").value;
            fetch(window.location.origin + "/api/Stripe/Product?product=" + productId + "&price=" + priceId, {
                method: "POST",
            })
                .then(function (response) {
                    return response.json();
                })
                .then(function (session) {
                    return stripe.redirectToCheckout({ sessionId: session.id });
                })
                .then(function (result) {
                    if (result.error) {
                        alert(result.error.message);
                    }
                })
                .catch(function (error) {
                    console.error("Error:", error);
                });
        });
    </script>
}

<h1>Detaljer om @Model.Product.Name</h1>

<section>
    <table class="table table-sm table-bordered" id="produkter">
        <thead class="thead-dark">
            <tr>
                <th>Navn</th>
                <th>Beskrivelse</th>
                <th>Pris</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.Product.Name</td>
            <td>@Model.Product.Description</td>
            <td>@(@Model.Prices[0].UnitAmount/100) kr.</td>
        </tr>
    </table>
    <input type="hidden" id="product" value="@Model.Product.Id" />
    <input type="hidden" id="price" value="@Model.Prices[0].Id" />
    <button type="submit" class="btn btn-primary" id="checkout-button">Køb @Model.Product.Name</button>
</section>
